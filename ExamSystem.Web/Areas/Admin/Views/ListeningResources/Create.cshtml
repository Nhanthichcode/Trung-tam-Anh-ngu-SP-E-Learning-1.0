@model ExamSystem.Core.Entities.ListeningResource
@{
    ViewData["Title"] = "Thêm File Nghe";
}

<h4>Thêm File Nghe mới</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label">Tiêu đề</label>
                <input asp-for="Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Chọn file âm thanh (.mp3)</label>
                <input type="file" name="audioFile" class="form-control" accept="audio/*" />
            </div>

            <div class="mb-3">
                <label asp-for="Transcript" class="form-label">Lời thoại (Transcript)</label>
                <textarea asp-for="Transcript" class="form-control" rows="4"></textarea>
            </div>

            <button type="submit" class="btn btn-success">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>