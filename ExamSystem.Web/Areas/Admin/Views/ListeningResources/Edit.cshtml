@model ExamSystem.Core.Entities.ListeningResource
@{
    ViewData["Title"] = "Sửa File Nghe";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-primary m-0"><i class="bi bi-pencil-square"></i> Cập nhật File Nghe</h2>
        <span class="text-muted small">Chỉnh sửa thông tin hoặc thay thế file âm thanh</span>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-gear-fill"></i> Chi tiết tài nguyên
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="AudioUrl" />

                    <div class="mb-4">
                        <label asp-for="Title" class="form-label fw-bold text-secondary">
                            <i class="bi bi-tag-fill me-1"></i> Tiêu đề
                        </label>
                        <input asp-for="Title" class="form-control form-control-lg fw-bold text-primary" required />
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded border border-dashed text-center h-100">
                                <label class="form-label fw-bold text-secondary d-block mb-2">File hiện tại</label>
                                @if (!string.IsNullOrEmpty(Model.AudioUrl))
                                {
                                    <div class="d-flex flex-column align-items-center justify-content-center">
                                        <audio controls src="@Model.AudioUrl" class="w-100 mb-2"></audio>
                                        <small class="text-muted text-break">@System.IO.Path.GetFileName(Model.AudioUrl)</small>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="bi bi-exclamation-triangle"></i> Chưa có file audio</span>
                                }
                            </div>
                        </div>
                        <div class="col-md-6 mt-3 mt-md-0">
                            <div class="p-3 bg-white rounded border h-100">
                                <label class="form-label fw-bold text-secondary">Thay đổi file mới (Tùy chọn)</label>
                                <input type="file" name="audioFile" class="form-control mb-2" accept=".mp3,.wav,.ogg" />
                                <div class="form-text text-muted small">
                                    <i class="bi bi-info-circle"></i> Chỉ chọn nếu bạn muốn thay thế file hiện tại. Nếu không, hãy bỏ trống.
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Transcript" class="form-label fw-bold text-secondary">
                            <i class="bi bi-chat-quote-fill me-1"></i> Lời thoại (Transcript)
                        </label>
                        <textarea asp-for="Transcript" class="form-control" rows="6"></textarea>
                        <span asp-validation-for="Transcript" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-3">
                        <a asp-action="Index" class="btn btn-light me-md-2">Hủy bỏ</a>
                        <button type="submit" class="btn btn-primary fw-bold px-4">
                            <i class="bi bi-save-fill me-2"></i> Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}