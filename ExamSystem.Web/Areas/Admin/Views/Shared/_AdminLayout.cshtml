@using Microsoft.AspNetCore.Identity
@using ExamSystem.Core.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    // Lấy tên Controller hiện tại để set Active Menu
    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();

    // [MỚI] Lấy thông tin User hiện tại để hiển thị Avatar
    var user = await UserManager.GetUserAsync(User);
    var fullName = user?.FullName ?? User.Identity?.Name;
    var avatarUrl = user?.AvatarUrl;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Portal</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading text-uppercase">
                 <a asp-area="Admin" asp-controller="Exams" asp-action="Index">
                <i class="bi bi-shield-lock-fill me-2 text-primary"></i> Exam Admin
                </a>
            </div>

            <div class="list-group list-group-flush my-3">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                   class="list-group-item list-group-item-action @(currentController == "Home" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Tổng quan
                </a>

                @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                {
                    // --- NHÓM 1: QUẢN LÝ ĐỀ THI ---
                    <div class="sidebar-heading small text-muted py-2 ps-3 mt-2 fw-bold" style="font-size: 0.75rem;">QUẢN LÝ ĐỀ THI</div>

                    <a asp-area="Admin" asp-controller="Exams" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "Exams" ? "active" : "")">
                        <i class="bi bi-file-earmark-text me-2"></i> Danh sách Đề thi
                    </a>

                    <a asp-area="Admin" asp-controller="ExamStructures" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "ExamStructures" ? "active" : "")">
                        <i class="bi bi-diagram-3 me-2"></i> Cấu trúc đề (Matrix)
                    </a>

                    @* <a asp-area="Admin" asp-controller="ExamParts" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "ExamParts" ? "active" : "")">
                        <i class="bi bi-layers me-2"></i> Phần thi (Parts)
                    </a> *@

                    @* <a asp-area="Admin" asp-controller="ExamQuestions" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "ExamQuestions" ? "active" : "")">
                        <i class="bi bi-list-check me-2"></i> Chi tiết câu trong đề
                    </a> *@


                    // --- NHÓM 2: NGÂN HÀNG CÂU HỎI ---
                    <div class="sidebar-heading small text-muted py-2 ps-3 mt-2 fw-bold" style="font-size: 0.75rem;">NGÂN HÀNG CÂU HỎI</div>

                    <a asp-area="Admin" asp-controller="Questions" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "Questions" ? "active" : "")">
                        <i class="bi bi-collection me-2"></i> Tất cả câu hỏi
                    </a>

                    <a asp-area="Admin" asp-controller="ReadingPassages" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "ReadingPassages" ? "active" : "")">
                        <i class="bi bi-book me-2"></i> Bài đọc (Reading)
                    </a>

                    <a asp-area="Admin" asp-controller="ListeningResources" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "ListeningResources" ? "active" : "")">
                        <i class="bi bi-headphones me-2"></i> File nghe (Listening)
                    </a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <div class="sidebar-heading small text-muted py-2 ps-3 mt-2" style="font-size: 0.75rem; background: transparent; border:none;">HỆ THỐNG</div>

                    <a asp-area="Admin" asp-controller="Users" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "Users" ? "active" : "")">
                        <i class="bi bi-people"></i> Quản lý Người dùng
                    </a>

                    <a asp-area="Admin" asp-controller="ExamResults" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "ExamResults" ? "active" : "")">
                        <i class="bi bi-people"></i> Chấm điểm bài thi
                    </a>

                    <a asp-area="Admin" asp-controller="Media" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "Media" ? "active" : "")">
                        <i class="bi bi-people"></i> Quản lý nội dung số
                    </a>

                    <a asp-area="Admin" asp-controller="Settings" asp-action="Index"
                       class="list-group-item list-group-item-action @(currentController == "Settings" ? "active" : "")">
                        <i class="bi bi-gear"></i> Cấu hình
                    </a>
                }
            </div>
        </div>
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light navbar-admin border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-outline-secondary btn-sm" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0 align-items-center">
                            <li class="nav-item">
                                <a class="nav-link text-secondary" href="/" target="_blank" title="Về trang chủ">
                                    <i class="bi bi-box-arrow-up-right me-1"></i> Web View
                                </a>
                            </li>

                            <li class="nav-item dropdown ms-3">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">

                                    @* --- SỬA: Hiển thị Avatar thật --- *@
                                    @if (!string.IsNullOrEmpty(avatarUrl))
                                    {
                                        <img src="@avatarUrl" alt="Avatar" class="rounded-circle me-2 border shadow-sm"
                                             style="width: 32px; height: 32px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center me-2 shadow-sm"
                                             style="width: 32px; height: 32px; font-size: 0.8rem;">
                                            @(fullName?.Substring(0, 1).ToUpper() ?? "A")
                                        </div>
                                    }

                                    @* --- SỬA: Hiển thị FullName thay vì UserName --- *@
                                    <span class="small fw-bold">@fullName</span>
                                </a>

                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow">
                                    <li>
                                        <div class="px-3 py-2 text-center border-bottom mb-2">
                                            <small class="text-muted d-block">Vai trò</small>
                                            <span class="badge bg-primary">ADMINISTRATOR</span>
                                        </div>
                                    </li>
                                    <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person me-2"></i>Hồ sơ cá nhân</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        @* --- SỬA: Thêm xác nhận đăng xuất --- *@
                                        <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="button" class="dropdown-item text-danger" onclick="confirmLogout()">
                                                <i class="bi bi-power me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="admin-content">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>

            <footer class="bg-white text-center py-3 border-top mt-auto small text-muted">
                &copy; 2025 Exam System Admin Portal.
            </footer>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>