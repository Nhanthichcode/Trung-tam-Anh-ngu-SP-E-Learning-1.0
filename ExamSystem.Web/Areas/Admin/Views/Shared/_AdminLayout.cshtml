@using Microsoft.AspNetCore.Identity
@using ExamSystem.Core.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var user = await UserManager.GetUserAsync(User);
    var fullName = user?.FullName ?? User.Identity?.Name;
    var avatarUrl = user?.AvatarUrl;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Anh Ngữ SP</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" /> @await RenderSectionAsync("Styles", required: false)
</head>
<body class="bg-light">

    <div class="d-flex" id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="brand-text">
                    ANH NGỮ <span class="brand-sp">SP</span>
                </a>
            </div>

            <div class="list-group list-group-flush pb-4">
                <a asp-area="Admin" asp-controller="Home" asp-action="Index"
                   class="list-group-item list-group-item-action @(currentController == "Home" ? "active" : "")">
                    <i class="bi bi-speedometer2"></i> Tổng quan
                </a>

                @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                {
                    <div class="sidebar-group-title">Quản lý Đề thi</div>
                    <a asp-area="Admin" asp-controller="Exams" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "Exams" ? "active" : "")"><i class="bi bi-file-earmark-text"></i> Danh sách Đề</a>
                    <a asp-area="Admin" asp-controller="ExamStructures" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "ExamStructures" ? "active" : "")"><i class="bi bi-diagram-3"></i> Cấu trúc đề</a>

                    <div class="sidebar-group-title">Ngân hàng câu hỏi</div>
                    <a asp-area="Admin" asp-controller="Questions" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "Questions" ? "active" : "")"><i class="bi bi-collection"></i> Tất cả câu hỏi</a>
                    <a asp-area="Admin" asp-controller="ReadingPassages" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "ReadingPassages" ? "active" : "")"><i class="bi bi-book"></i> Bài đọc</a>
                    <a asp-area="Admin" asp-controller="ListeningResources" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "ListeningResources" ? "active" : "")"><i class="bi bi-headphones"></i> File nghe</a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <div class="sidebar-group-title">Hệ thống</div>
                    <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "Users" ? "active" : "")"><i class="bi bi-people"></i> Người dùng</a>
                    <a asp-area="Admin" asp-controller="ExamResults" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "ExamResults" ? "active" : "")"><i class="bi bi-check2-circle"></i> Chấm thi</a>
                    <a asp-area="Admin" asp-controller="Media" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "Media" ? "active" : "")"><i class="bi bi-cloud-check"></i> Tài nguyên</a>
                    <a asp-area="Admin" asp-controller="Settings" asp-action="Index" class="list-group-item list-group-item-action @(currentController == "Settings" ? "active" : "")"><i class="bi bi-gear"></i> Cấu hình</a>
                }
            </div>
        </div>

        <div id="page-content-wrapper" class="d-flex flex-column min-vh-100">

            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm sticky-top">
                <div class="container-fluid">
                    <button class="btn btn-light border text-danger" id="sidebarToggle">
                        <i class="bi bi-list fs-5"></i>
                    </button>

                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                <span class="d-none d-md-block me-2 fw-bold text-dark">@fullName</span>
                                @if (!string.IsNullOrEmpty(avatarUrl))
                                {
                                    <img src="@avatarUrl" class="rounded-circle border" style="width: 35px; height: 35px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-danger text-white d-flex justify-content-center align-items-center" style="width: 35px; height: 35px;">
                                        @(fullName?.Substring(0, 1).ToUpper() ?? "A")
                                    </div>
                                }
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                <li><a class="dropdown-item" href="/Account/Profile"><i class="bi bi-person me-2"></i> Hồ sơ</a></li>
                                <li><a class="dropdown-item" href="/" target="_blank"><i class="bi bi-box-arrow-up-right me-2"></i> Trang chủ</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger"><i class="bi bi-power me-2"></i> Đăng xuất</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @RenderBody()
            </div>

            <footer class="admin-footer text-center">
                <small class="text-muted">&copy; @DateTime.Now.Year <strong>Trung Tâm Anh Ngữ SP</strong>. All rights reserved.</small>
            </footer>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js"></script>

    <script>
        window.addEventListener('DOMContentLoaded', event => {
            const sidebarToggle = document.body.querySelector('#sidebarToggle');
            if (sidebarToggle) {
                // Xử lý click nút toggle
                sidebarToggle.addEventListener('click', event => {
                    event.preventDefault();
                    document.body.classList.toggle('sb-sidenav-toggled');

                    // Lưu trạng thái vào localStorage để nhớ khi F5 (chỉ trên desktop)
                    if (window.innerWidth >= 768) {
                        localStorage.setItem('sb|sidebar-toggle', document.body.classList.contains('sb-sidenav-toggled'));
                    }
                });
            }

            // Khôi phục trạng thái sidebar trên desktop
            if (window.innerWidth >= 768) {
                const isToggled = localStorage.getItem('sb|sidebar-toggle') === 'true';
                if (isToggled) {
                    document.body.classList.add('sb-sidenav-toggled');
                }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>