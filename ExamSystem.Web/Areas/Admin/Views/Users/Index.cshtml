@model IEnumerable<ExamSystem.Web.Models.UserViewModel>

@{
    ViewData["Title"] = "Quản lý Người dùng";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Quản lý Người dùng</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Người dùng</li>
    </ol>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-people-fill me-1"></i>
                Danh sách tài khoản hệ thống
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Người dùng</th>
                            <th>Email</th>
                            <th>Vai trò</th>
                            <th>Trạng thái</th>
                            <th class="text-end">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(user.AvatarUrl))
                                        {
                                            <img src="@user.AvatarUrl" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;" alt="Avatar">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white d-flex justify-content-center align-items-center me-2"
                                                 style="width: 40px; height: 40px;">
                                                @user.FullName.Substring(0, 1).ToUpper()
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-bold">@user.FullName</div>
                                            <small class="text-muted">ID: @user.Id.Substring(0, 8)...</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @foreach (var role in user.Roles.Split(","))
                                    {
                                        <span class="badge bg-info text-dark">@role.Trim()</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsLocked)
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-lock-fill me-1"></i>Đang bị khóa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle-fill me-1"></i>Hoạt động</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-sm @(user.IsLocked ? "btn-outline-success" : "btn-outline-warning")"
                                                    title="@(user.IsLocked ? "Mở khóa" : "Khóa tài khoản")">
                                                <i class="bi @(user.IsLocked ? "bi-unlock" : "bi-lock")"></i>
                                            </button>
                                        </form>

                                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này? Thao tác này không thể hoàn tác!');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger ms-1" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>