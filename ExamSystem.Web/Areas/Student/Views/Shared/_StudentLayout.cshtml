@using Microsoft.AspNetCore.Identity
@using ExamSystem.Core.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    // Lấy tên Controller hiện tại để highlight menu
    string currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    string currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cổng Thi Trực Tuyến</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/student.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-light student-navbar fixed-top">
            <div class="container">
                <a class="navbar-brand student-brand" asp-area="Student" asp-controller="Test" asp-action="Index">
                    <i class="bi bi-laptop me-2"></i>Exam Portal
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#studentNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="studentNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link @(currentController == "StudentExams" ? "active" : "")"
                               asp-area="Student" asp-controller="StudentExams" asp-action="Index">
                                <i class="bi bi-grid-fill me-1"></i> Danh sách đề thi
                            </a>
                        </li>

                        <li class="nav-item">
                            @* Sửa action từ History thành Index *@
                            <a class="nav-link @(currentController == "StudentExamsResults" ? "active" : "")"
                               asp-area="Student" asp-controller="StudentExamsResults" asp-action="Index">
                                <i class="bi bi-journal-bookmark-fill me-1"></i> Lịch sử & Kết quả
                            </a>
                        </li>

                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            var fullName = user?.FullName ?? User.Identity?.Name;
                            var avatarUrl = user?.AvatarUrl;

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                    <span class="me-2 text-dark fw-bold">@fullName</span>
                                    @if (!string.IsNullOrEmpty(avatarUrl))
                                    {
                                        <img src="@avatarUrl" alt="Avatar"
                                             class="rounded-circle border shadow-sm"
                                             style="width: 35px; height: 35px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-primary text-white d-flex justify-content-center align-items-center shadow-sm"
                                             style="width: 35px; height: 35px; font-size: 0.9rem;">
                                            @(fullName?.Substring(0, 1).ToUpper() ?? "U")
                                        </div>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow mt-2">
                                    <li>
                                        <div class="px-3 py-2">
                                            <small class="text-muted d-block">Tài khoản học viên</small>
                                            <small class="fw-bold text-primary">@User.Identity?.Name</small>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item" href="/Account/Profile">
                                            <i class="bi bi-person-gear me-2"></i>Thông tin cá nhân
                                        </a>
                                    </li>
                                    <li>
                                        <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="button" class="dropdown-item text-danger" onclick="confirmLogout()">
                                                <i class="bi bi-power me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="student-container pt-5">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="student-footer mt-auto py-3 bg-light">
        <div class="container text-center">
            <p class="mb-1 fw-bold">Hệ Thống Thi Trực Tuyến</p>
            <p class="mb-0 small text-muted">
                &copy; @DateTime.Now.Year ExamSystem. Chúc bạn đạt kết quả tốt!
            </p>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>