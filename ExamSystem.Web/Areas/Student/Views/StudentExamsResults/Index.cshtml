@model IEnumerable<ExamSystem.Core.Entities.TestAttempt>

@{
    ViewData["Title"] = "Lịch sử & Kết quả";
}

<div class="container mt-4">
    <h3><i class="bi bi-journal-bookmark-fill me-2"></i>Lịch sử làm bài</h3>
    <div class="card shadow-sm border-0 mt-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Tên đề thi</th>
                        <th>Ngày nộp</th>
                        <th>Trạng thái</th>
                        <th>Điểm số</th>
                        <th class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.Exam?.Title</td>
                            <td>@item.SubmitTime</td>
                            <td>
                                @if (item.Status == 2) // Giả sử 2 là Graded (Đã chấm)
                                {
                                    <span class="badge bg-success">Đã chấm điểm</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Chờ chấm điểm</span>
                                }
                            </td>
                            <td class="text-danger fw-bold">@item.Score</td>
                            <td class="text-end">
                                <a asp-controller="StudentExams" asp-action="Result" asp-route-attemptId="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye-fill"></i> Xem chi tiết
                                </a>                             
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>