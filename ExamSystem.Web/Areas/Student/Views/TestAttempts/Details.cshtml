@model ExamSystem.Core.Entities.TestAttempt
@{
    ViewData["Title"] = "Chi tiết bài thi";
}

<h3>Kết quả bài thi: @Model.Exam?.Title</h3>
<div class="alert alert-info">
    <strong>Thí sinh:</strong> @Model.UserId <br />
    <strong>Điểm số:</strong> @Model.Score <br />
    <strong>Thời gian nộp:</strong> @Model.SubmitTime
</div>

<h4>Chi tiết từng câu:</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Câu hỏi</th>
            <th>Kết quả</th>
            <th>Đáp án chọn (ID)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model.TestResults)
        {
            <tr class="@(result.IsCorrect == true ? "table-success" : "table-danger")">
                <td>@Html.Raw(result.Question?.Content)</td>
                <td>
                    @if (result.IsCorrect == true)
                    {
                        <span class="fw-bold text-success">Đúng</span>
                    }
                    else
                    {

                        <span class="fw-bold text-danger">Sai</span>
                    }
                </td>
                <td>@result.SelectedAnswerId</td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>