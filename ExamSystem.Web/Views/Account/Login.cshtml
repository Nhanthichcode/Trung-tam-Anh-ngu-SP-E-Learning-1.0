@using Microsoft.AspNetCore.Identity
@using ExamSystem.Core.Entities
@model ExamSystem.Web.Models.LoginVM
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
    var loginProviders = schemes.ToList();
}

<style>
    .auth-card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .auth-header {
        background: linear-gradient(135deg, var(--brand-red) 0%, #a00000 100%);
        padding: 2rem 1rem;
        text-align: center;
        color: white;
        position: relative;
    }

        .auth-header::after {
            content: "";
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            border-width: 10px 10px 0;
            border-style: solid;
            border-color: var(--brand-red) transparent transparent transparent;
        }

    .form-control-lg {
        font-size: 0.95rem;
        padding-left: 2.5rem; /* Chừa chỗ cho icon */
    }

    .input-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #adb5bd;
        z-index: 4;
    }

    .password-toggle {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: var(--brand-red);
        z-index: 4;
    }

    .form-floating > .form-control {
        padding-left: 2.5rem;
    }

    .form-floating > label {
        padding-left: 2.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card auth-card">
                <div class="auth-header">
                    <h3 class="fw-bold text-uppercase m-0">Đăng Nhập</h3>
                    <small class="opacity-75">Chào mừng bạn quay trở lại!</small>
                </div>

                <div class="card-body p-4 pt-5">
                    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger border-0 bg-danger bg-opacity-10 d-flex align-items-center mb-4" role="alert">
                                <i class="bi bi-exclamation-triangle-fill text-danger fs-4 me-3"></i>
                                <div class="small text-danger fw-bold">
                                    <div asp-validation-summary="ModelOnly" class="m-0"></div>
                                </div>
                            </div>
                        }

                        <div class="form-floating mb-3 position-relative">
                            <i class="bi bi-envelope-fill input-icon"></i>
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Email đăng nhập</label>
                            <span asp-validation-for="Email" class="text-danger small ms-2"></span>
                        </div>

                        <div class="form-floating mb-3 position-relative">
                            <i class="bi bi-lock-fill input-icon"></i>
                            <input asp-for="Password" type="password" class="form-control" id="passwordInput" placeholder="Mật khẩu" />
                            <label asp-for="Password">Mật khẩu</label>
                            <i class="bi bi-eye-slash-fill password-toggle" id="togglePassword" onclick="togglePass('passwordInput', 'togglePassword')"></i>
                            <span asp-validation-for="Password" class="text-danger small ms-2"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" style="cursor: pointer;" />
                                <label class="form-check-label small user-select-none" asp-for="RememberMe">Ghi nhớ tôi</label>
                            </div>
                            <a href="#" class="text-decoration-none small fw-bold text-danger hover-underline">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn btn-brand-primary w-100 py-2 fw-bold shadow-sm text-uppercase mb-3">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Đăng Nhập
                        </button>
                    </form>

                    @if (loginProviders.Count > 0)
                    {
                        <div class="text-center my-3 position-relative">
                            <hr class="text-muted opacity-25">
                            <span class="position-absolute top-50 start-50 translate-middle bg-white px-2 small text-muted">Hoặc</span>
                        </div>

                        <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="text-center">
                            @foreach (var provider in loginProviders)
                            {
                                <button type="submit" class="btn btn-outline-danger w-100 fw-bold py-2 mb-2 d-flex align-items-center justify-content-center"
                                        name="provider" value="@provider.Name">
                                    <i class="bi bi-google me-2"></i> Đăng nhập với @provider.DisplayName
                                </button>
                            }
                        </form>
                    }

                    <div class="text-center mt-4 pt-3 border-top">
                        <span class="small text-muted">Chưa có tài khoản?</span>
                        <a asp-action="Register" class="fw-bold text-decoration-none ms-1 text-danger">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePass(inputId, iconId) {
        const input = document.getElementById(inputId);
        const icon = document.getElementById(iconId);
        if (input.type === "password") {
            input.type = "text";
            icon.classList.replace("bi-eye-slash-fill", "bi-eye-fill");
        } else {
            input.type = "password";
            icon.classList.replace("bi-eye-fill", "bi-eye-slash-fill");
        }
    }
</script>