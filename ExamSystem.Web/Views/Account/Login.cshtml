@using Microsoft.AspNetCore.Identity
@using ExamSystem.Core.Entities
@model ExamSystem.Web.Models.LoginVM
@inject SignInManager<AppUser> SignInManager

@{
    ViewData["Title"] = "Đăng nhập";
    // Lấy danh sách các provider (Google, Facebook...) đã cấu hình
    var schemes = await SignInManager.GetExternalAuthenticationSchemesAsync();
    var loginProviders = schemes.ToList();
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 fw-bold text-primary">Đăng Nhập</h3>

                    <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 small"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="Email">Địa chỉ Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                            <label asp-for="Password">Mật khẩu</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label class="form-check-label small" asp-for="RememberMe">Ghi nhớ tôi</label>
                            </div>
                            <a href="#" class="text-decoration-none small">Quên mật khẩu?</a>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold shadow-sm">Đăng Nhập</button>
                    </form>

                    @if (loginProviders.Count > 0)
                    {
                        <div class="text-center my-3 text-muted position-relative">
                            <hr class="position-absolute w-100 top-50" style="z-index:1">
                            <span class="bg-white px-2 position-relative small" style="z-index:2">Hoặc tiếp tục với</span>
                        </div>

                        <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" class="text-center">
                            @foreach (var provider in loginProviders)
                            {
                                <button type="submit" class="btn btn-outline-danger w-100 py-2 mb-2 fw-bold"
                                        name="provider" value="@provider.Name"
                                        title="Đăng nhập bằng tài khoản @provider.DisplayName">
                                    <i class="bi bi-google me-2"></i> @provider.DisplayName
                                </button>
                            }
                        </form>
                    }

                    <div class="text-center mt-4 pt-3 border-top">
                        <span class="small text-muted">Chưa có tài khoản?</span>
                        <a asp-action="Register" class="text-decoration-none fw-bold ms-1">Đăng ký ngay</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>