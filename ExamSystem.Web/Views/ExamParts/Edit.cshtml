@model ExamSystem.Core.Entities.ExamPart
@{
    ViewData["Title"] = "Sửa Phần thi";
}

<h4>Sửa Phần thi</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div class="mb-3">
                <label class="form-label">Thuộc Đề thi</label>
                <input type="hidden" asp-for="Id" />
                <select asp-for="ExamId" class="form-control" asp-items="ViewBag.ExamId"></select>
            </div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Tên phần (VD: Part 1 Listening)</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-md-2">
                <label class="small fw-bold">Loại Kỹ năng <span class="text-danger">*</span></label>
                <select name="skillType" class="form-select form-select-sm" required>
                    <option value="1">🎧 Listening</option>
                    <option value="2">📖 Reading</option>
                    <option value="3">✍️ Writing</option>
                    <option value="4">🗣️ Speaking</option>
                    <option value="5">🔤 Grammar</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="OrderIndex" class="form-label">Thứ tự xuất hiện</label>
                <input asp-for="OrderIndex" type="number" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Lưu</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
        </form>
    </div>
</div>