<div class="mt-4">
    <h4>Danh sách câu hỏi trong đề (@Model.ExamQuestions.Count câu)</h4>
    <hr />

    @if (Model.ExamQuestions.Count == 0)
    {
        <div class="alert alert-warning">
            Đề thi này chưa có câu hỏi nào.
            <a asp-action="AddQuestions" asp-route-id="@Model.Id">Soạn đề ngay</a>
        </div>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>STT</th>
                    <th>Nội dung câu hỏi</th>
                    <th>Loại</th>
                    <th>Điểm</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model.ExamQuestions)
                {
                    <tr>
                        <td class="text-center">@(i++)</td>
                        <td>
                            @item.Question.Content
                            @if (!string.IsNullOrEmpty(item.Question.MediaUrl))
                            {
                                <br />
                    
                                <small class="text-muted"><i class="fa fa-paperclip"></i> Có file đính kèm</small>
                            }
                        </td>
                        <td>@item.Question.Type</td>
                        <td>@item.Score</td>
                        <td>
                            <button class="btn btn-sm btn-danger" disabled title="Tính năng đang phát triển">Xóa</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>