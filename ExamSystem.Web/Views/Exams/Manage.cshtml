@model ExamSystem.Core.Entities.Exam
@{
    ViewData["Title"] = "Soạn Đề thi: " + Model.Title;
}

<div class="d-flex justify-content-between mb-3">
    <h2>Soạn đề: @Model.Title</h2>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>

@foreach (var part in Model.ExamParts.OrderBy(p => p.OrderIndex))
{
    <div class="card mb-4 border-primary">
        <div class="card-header bg-primary text-white d-flex justify-content-between">
            <h5 class="mb-0">@part.Name</h5>
            <small>Thứ tự: @part.OrderIndex</small>
        </div>
        <div class="card-body">
            <table class="table table-sm table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Câu hỏi</th>
                        <th width="100">Điểm</th>
                        <th width="80">Xóa</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var eq in part.ExamQuestions)
                    {
                        <tr>
                            <td>@eq.Question?.Content</td>
                            <td>@eq.Score</td>
                            <td>
                                <form asp-action="RemoveQuestionFromPart" method="post">
                                    <input type="hidden" name="examId" value="@Model.Id" />
                                    <input type="hidden" name="examQuestionId" value="@eq.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">X</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <hr />
            <form asp-action="AddQuestionToPart" method="post" class="row g-2 align-items-center">
                <input type="hidden" name="examId" value="@Model.Id" />
                <input type="hidden" name="partId" value="@part.Id" />

                <div class="col-auto">
                    <label class="col-form-label fw-bold">Thêm câu hỏi:</label>
                </div>
                <div class="col-6">
                    <select name="questionId" class="form-select">
                        @foreach (var q in (List<ExamSystem.Core.Entities.Question>)ViewBag.AllQuestions)
                        {
                            <option value="@q.Id">ID @q.Id: @(q.Content.Length > 50 ? q.Content.Substring(0, 40) + "..." : q.Content)</option>
                        }
                    </select>
                </div>
                <div class="col-auto">
                    <input type="number" name="score" class="form-control" placeholder="Điểm" value="5" step="0.5" style="width: 80px;" />
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-success">Thêm</button>
                </div>
            </form>
        </div>
    </div>
}

<div class="text-center">
    <a href="/ExamParts/Create?examId=@Model.Id" class="btn btn-outline-primary btn-lg border-dashed">
        + Thêm Phần thi mới (Part)
    </a>
</div>