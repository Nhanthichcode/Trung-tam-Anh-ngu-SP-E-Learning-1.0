@model ExamSystem.Core.Entities.ListeningResource

@{
    ViewData["Title"] = "Thêm File nghe";
}

<div class="container mt-4">
    <div class="card border-success shadow-lg">
        <div class="card-header bg-success text-white">
            <h4 class="m-0"><i class="fa fa-plus-circle"></i> Upload File nghe mới</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Tiêu đề Tài nguyên (*)</label>
                    <input asp-for="Title" class="form-control" placeholder="Ví dụ: Bài nghe Part 3 - Topic A" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Chọn File Audio (*)</label>
                    <input type="file" name="audioFile" class="form-control" accept=".mp3,.wav" required />
                    <span asp-validation-for="AudioUrl" class="text-danger"></span>
                    <small class="text-muted">Chỉ chấp nhận file .mp3 hoặc .wav.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Transcript" class="form-label fw-bold">Transcript (Nội dung)</label>
                    <textarea asp-for="Transcript" class="form-control" rows="8" placeholder="Dán nội dung transcript vào đây..."></textarea>
                    <span asp-validation-for="Transcript" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Quay lại</a>
                    <button type="submit" class="btn btn-success px-5 shadow">
                        <i class="fa fa-upload"></i> Lưu File nghe
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}