@model ExamSystem.Core.Entities.ListeningResource
@{
    ViewData["Title"] = "Sửa File Nghe";
}

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Tiêu đề bài nghe</label>
        <input asp-for="Title" class="form-control" required />
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="mb-3">
        <label class="form-label">Chọn file Audio (.mp3)</label>
        <input type="file" name="audioFile" class="form-control" accept=".mp3,.wav" />
    </div>

    <div class="mb-3">
        <label asp-for="Transcript" class="form-label">Lời thoại (Transcript)</label>
        <textarea asp-for="Transcript" class="form-control" rows="5"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Lưu bài nghe</button>
</form>