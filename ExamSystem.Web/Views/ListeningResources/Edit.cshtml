@model ExamSystem.Core.Entities.ListeningResource

@{
    ViewData["Title"] = "Sửa File nghe";
}

<div class="container mt-4">
    <div class="card border-warning shadow-lg">
        <div class="card-header bg-warning text-dark">
            <h4 class="m-0"><i class="fa fa-pencil"></i> Sửa Tài nguyên nghe #@Model.Id</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AudioUrl" /> @* Giữ đường dẫn cũ để xử lý xóa *@
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Tiêu đề Tài nguyên (*)</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 p-3 border rounded bg-light">
                    <label class="form-label fw-bold d-block">File Audio hiện tại:</label>
                    @if (!string.IsNullOrEmpty(Model.AudioUrl))
                    {
                        <audio controls src="@Model.AudioUrl" class="w-100 mb-2"></audio>
                    }
                    <input type="file" name="audioFile" class="form-control" accept=".mp3,.wav" />
                    <small class="text-muted">Chọn file mới để thay thế file hiện tại.</small>
                    <span asp-validation-for="AudioUrl" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Transcript" class="form-label fw-bold">Transcript (Nội dung)</label>
                    <textarea asp-for="Transcript" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="Transcript" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Hủy và Quay lại</a>
                    <button type="submit" class="btn btn-warning px-5 shadow">
                        <i class="fa fa-save"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}