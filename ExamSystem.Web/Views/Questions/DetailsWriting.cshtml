@model ExamSystem.Core.Entities.Question
@using ExamSystem.Core.Enums

@{
    ViewData["Title"] = "Chi tiết bài VIẾT";
}

<div class="container mt-4">
    <div class="card border-success shadow-lg">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="m-0"><i class="fa fa-pencil-square-o"></i> Chi tiết bài VIẾT #@Model.Id</h4>
            <span class="badge bg-white text-success">@Model.Type</span>
        </div>
        <div class="card-body">

            @* --- PHẦN THÔNG TIN CHUNG (Ngang hàng trên cùng) --- *@
            <div class="row mb-4 p-3 bg-light rounded mx-0 border">
                <div class="col-md-3 border-end">
                    <small class="text-uppercase text-muted fw-bold">Độ khó</small>
                    <div class="fs-5 text-success fw-bold">Level @Model.Level</div>
                </div>
                <div class="col-md-6 border-end">
                    <small class="text-uppercase text-muted fw-bold">Chủ đề</small>
                    <div>
                        @if (Model.QuestionTopics != null && Model.QuestionTopics.Any())
                        {
                            foreach (var qt in Model.QuestionTopics)
                            {
                                <span class="badge bg-success bg-opacity-75 me-1">@qt.Topic?.Name</span>
                            }
                        }
                        else
                        {
                            <span>---</span>
                        }
                    </div>
                </div>
                <div class="col-md-3">
                    <small class="text-uppercase text-muted fw-bold">Ngày tạo</small>
                    <div>@Model.CreatedDate.ToString("dd/MM/yyyy")</div>
                </div>
            </div>

            @* --- PHẦN NỘI DUNG ĐỀ BÀI (Chính) --- *@
            <div class="row">
                <div class="col-12">
                    <h5 class="text-success"><i class="fa fa-file-text-o"></i> Đề bài (Prompt)</h5>
                    <div class="p-4 border rounded bg-white shadow-sm" style="min-height: 300px; background-color: #fffdf5;">
                        @* Sử dụng font chữ dễ đọc cho văn bản dài *@
                        <div style="font-family: 'Arial', serif; font-size: 1.1rem; line-height: 1.8;color: #2c3e50;">
                            @Model.Content
                        </div>
                    </div>
                </div>
            </div>

            @* --- PHẦN GHI CHÚ CHẤM ĐIỂM --- *@
            @if (!string.IsNullOrEmpty(Model.Explaination))
            {
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="alert alert-warning">
                            <h6 class="alert-heading fw-bold"><i class="fa fa-info-circle"></i> Hướng dẫn chấm điểm / Ghi chú:</h6>
                            <hr>
                            <p class="mb-0 small">@Model.Explaination</p>
                        </div>
                    </div>
                </div>
            }

        </div>
        <div class="card-footer bg-light d-flex justify-content-between py-3">
            <a asp-action="Index" class="btn btn-secondary shadow-sm"><i class="fa fa-arrow-left"></i> Quay lại</a>
            <div>
                <a asp-action="EditWriting" asp-route-id="@Model.Id" class="btn btn-success shadow-sm fw-bold me-2"><i class="fa fa-pencil"></i> Sửa bài viết</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger shadow-sm"><i class="fa fa-trash"></i> Xóa</a>
            </div>
        </div>
    </div>
</div>