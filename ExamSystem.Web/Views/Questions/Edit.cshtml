@model ExamSystem.Core.Entities.Question
@using ExamSystem.Core.Enums

@{
    ViewData["Title"] = "Sửa câu hỏi";
}

<div class="container mt-4">
    <div class="card border-warning">
        <div class="card-header bg-warning">
            <h4><i class="fa fa-pencil"></i> Sửa câu hỏi #@Model.Id (@Model.Type)</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Type" id="QuestionType" /> <div class="row">
                    <div class="col-md-8">
                        <div class="form-group mb-3">
                            <label class="fw-bold">Nội dung / Đề bài</label>
                            <textarea asp-for="Content" class="form-control" rows="5"></textarea>
                        </div>

                        @if (Model.Type != QuestionType.Writing && Model.Type != QuestionType.Speaking)
                        {
                            <div class="card border-secondary mb-3">
                                <div class="card-header bg-secondary text-white">Đáp án (Chỉ cho trắc nghiệm)</div>
                                <div class="card-body">
                                    <div class="row g-2">
                                        <div class="col-6"><input asp-for="OptionA" class="form-control" placeholder="A" /></div>
                                        <div class="col-6"><input asp-for="OptionB" class="form-control" placeholder="B" /></div>
                                        <div class="col-6"><input asp-for="OptionC" class="form-control" placeholder="C" /></div>
                                        <div class="col-6"><input asp-for="OptionD" class="form-control" placeholder="D" /></div>
                                    </div>
                                    <div class="mt-2">
                                        <label>Đáp án đúng:</label>
                                        <input asp-for="CorrectAnswer" class="form-control w-25 text-uppercase" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="col-md-4">
                        <div class="mb-3">
                            <label class="fw-bold">Độ khó</label>
                            <select asp-for="Level" class="form-select">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>

                        @if (Model.Type == QuestionType.Speaking || Model.Type == QuestionType.Listening || !string.IsNullOrEmpty(Model.MediaUrl))
                        {
                            <div class="card bg-light">
                                <div class="card-header">Media (Ảnh/Audio)</div>
                                <div class="card-body text-center">
                                    @if (!string.IsNullOrEmpty(Model.MediaUrl))
                                    {
                                        <div class="mb-2">
                                            @if (Model.MediaUrl.EndsWith("mp3"))
                                            {
                                                <audio controls src="@Model.MediaUrl" class="w-100"></audio>
                                            }
                                            else
                                            {

                                                <img src="@Model.MediaUrl" class="img-fluid" style="max-height:150px" />
                                            }
                                        </div>
                                    }
                                    <input type="file" name="fileUpload" class="form-control" />
                                    <small class="text-muted">Chọn file mới để thay thế.</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="text-center mt-3">
                    <button type="submit" class="btn btn-warning px-5">CẬP NHẬT</button>
                </div>
            </form>
        </div>
    </div>
</div>