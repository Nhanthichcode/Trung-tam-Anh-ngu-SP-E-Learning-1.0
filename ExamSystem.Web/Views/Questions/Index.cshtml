@model IEnumerable<ExamSystem.Core.Entities.Question>
@using ExamSystem.Core.Enums

@{
    ViewData["Title"] = "Quản lý câu hỏi";

    // Lọc và gom nhóm an toàn (giữ nguyên logic)
    var readingQuestions = Model.Where(x => x.Type == QuestionType.ReadingPassage);
    var readingGroups = readingQuestions
        .GroupBy(x => x.ReadingPassageId.HasValue ? "ID_" + x.ReadingPassageId : ("No_Content_" + x.Id))
        .ToList();
    var normalQuestions = Model.Where(x => x.Type != QuestionType.ReadingPassage).ToList();

    // Lấy dữ liệu từ ViewBag (cần được Controller cung cấp)
    var allTopics = ViewData["Topics"] as SelectList;

    // Lấy giá trị lọc hiện tại
    var currentType = ViewData["CurrentType"];
    var currentLevel = ViewData["CurrentLevel"];
    var currentTopic = ViewData["CurrentTopic"];
}

<div class="container-fluid mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary m-0">Ngân hàng câu hỏi</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm"><i class="fa fa-plus-circle"></i> Tạo mới</a>
    </div>

    @* === FORM LỌC & TÌM KIẾM === *@
    <form asp-action="Index" method="get" class="mb-4 p-3 bg-light rounded shadow-sm">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label fw-bold">Tìm kiếm (Nội dung)</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Nhập từ khóa..." />
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold">Loại câu hỏi</label>
                <select name="filterType" class="form-select" asp-items="Html.GetEnumSelectList<QuestionType>()">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold">Độ khó</label>
                <select name="filterLevel" class="form-select" asp-items="@ViewData["Levels"] as SelectList">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <div class="col-md-2">
                <label class="form-label fw-bold">Chủ đề (Topic)</label>
                <select name="filterTopicId" class="form-select" asp-items="allTopics">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="fa fa-filter"></i> Lọc</button>
            </div>
        </div>
    </form>
    @* === KẾT THÚC FORM LỌC === *@

    <div class="table-responsive shadow-sm bg-white rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-primary text-white">
                <tr>
                    <th style="width: 5%">ID</th>
                    <th style="width: 50%">Nội dung</th>
                    <th style="width: 15%">Loại</th>
                    <th style="width: 15%">Info</th>
                    <th style="width: 15%" class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>

                @if (!Model.Any())
                {
                    <tr><td colspan="5" class="text-center py-4 text-muted">Chưa có dữ liệu.</td></tr>
                }

                @* --- PHẦN BÀI ĐỌC (Reading Groups) --- *@
                @foreach (var group in readingGroups)
                {
                    var firstItem = group.FirstOrDefault();
                    if (firstItem == null) { continue; }

                    var collapseId = "collapse_" + firstItem.Id;
                    string rawPassage = firstItem.ReadingPassage?.Content ?? "(Nội dung bài đọc trống)";
                    string displayPassage = rawPassage.Length > 80 ? rawPassage.Substring(0, 80) + "..." : rawPassage;

                    <tr class="table-warning border-bottom border-warning">
                        <td><span class="badge bg-dark">#G</span></td>
                        <td>
                            <a class="text-decoration-none text-dark fw-bold d-block" data-bs-toggle="collapse" href="#@collapseId" role="button">
                                <i class="fa fa-book text-success me-2"></i>
                                BÀI ĐỌC (Gồm @group.Count() câu)
                                <i class="fa fa-chevron-down float-end text-muted small mt-1"></i>
                            </a>
                            <div class="text-muted small text-truncate fst-italic">@displayPassage</div>

                            <div class="collapse mt-2" id="@collapseId">
                                <div class="card card-body bg-light border p-2">
                                    <ul class="list-group list-group-flush">
                                        @foreach (var subItem in group)
                                        {
                                            <li class="list-group-item bg-transparent d-flex justify-content-between ps-0">
                                                <span><i class="fa fa-question-circle text-info"></i> @subItem.Content</span>
                                                <span class="badge bg-white text-secondary border">ID: @subItem.Id</span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </td>
                        <td><span class="badge bg-success rounded-pill">Reading</span></td>
                        <td><span class="badge bg-light text-dark border">Level @firstItem.Level</span></td>
                        <td class="text-center">
                            <div class="btn-group shadow-sm bg-white rounded">
                                <a asp-action="EditReading" asp-route-id="@firstItem.Id" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil"></i></a>
                                <a asp-action="DetailsReading" asp-route-id="@firstItem.Id" class="btn btn-sm btn-outline-info"><i class="fa fa-eye"></i></a>
                                <a asp-action="Delete" asp-route-id="@firstItem.Id" class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }

                @* --- PHẦN CÂU HỎI ĐƠN (Normal Questions) --- *@
                @foreach (var item in normalQuestions)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <div class="fw-bold text-dark">@(item.Content ?? "Nội dung trống")</div>

                            @{
                                string mediaLink = item.ListeningResource?.AudioUrl ?? item.MediaUrl;
                            }

                            @if (!string.IsNullOrEmpty(mediaLink))
                            {
                                <div class="mt-1">
                                    @if (mediaLink.EndsWith(".mp3") || mediaLink.EndsWith(".wav"))
                                    {
                                        <audio controls src="@mediaLink" style="height: 25px; width: 200px;"></audio>
                                    }
                                    else
                                    {
                                        <a href="@mediaLink" target="_blank" class="badge bg-info text-decoration-none"><i class="fa fa-paperclip"></i> File đính kèm</a>
                                    }
                                </div>
                            }
                        </td>
                        <td><span class="badge bg-secondary">@item.Type</span></td>
                        <td>
                            <span class="badge bg-light text-dark border">Level @item.Level</span>
                            @* Thêm hiển thị Topic *@
                            @if (item.QuestionTopics != null && item.QuestionTopics.Any())
                            {
                                <div class="small mt-1 text-muted">(@string.Join(", ", item.QuestionTopics.Select(qt => qt.Topic.Name)))</div>
                            }
                        </td>
                        <td class="text-center">
                            <div class="btn-group shadow-sm">
                                @if (item.Type == QuestionType.Listening && item.ListeningResourceId.HasValue)
                                {
                                    <a asp-action="EditListening" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fa fa-pencil"></i></a>
                                    <a asp-action="DetailsListening" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fa fa-eye"></i></a>
                                }
                                else
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="fa fa-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="fa fa-eye"></i></a>
                                }
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    // FIX 4: Đảm bảo Selects chọn đúng giá trị khi quay lại từ POST
    var currentType = "@ViewData["CurrentType"]";
    var currentLevel = "@ViewData["CurrentLevel"]";
    var currentTopic = "@ViewData["CurrentTopicId"]";

    if(currentType) document.querySelector('select[name="filterType"]').value = currentType;
    if(currentLevel) document.querySelector('select[name="filterLevel"]').value = currentLevel;
    if(currentTopic) document.querySelector('select[name="filterTopicId"]').value = currentTopic;
</script>