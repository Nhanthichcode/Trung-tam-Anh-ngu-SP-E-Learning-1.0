@model ExamSystem.Core.Entities.ReadingPassage
@{
    ViewData["Title"] = "Tạo bài đọc";
}

<h4>Tạo Bài đọc mới</h4>
<hr />
<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Tiêu đề</label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Content" class="form-label">Nội dung bài đọc</label>
        <textarea asp-for="Content" class="form-control" rows="10"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>