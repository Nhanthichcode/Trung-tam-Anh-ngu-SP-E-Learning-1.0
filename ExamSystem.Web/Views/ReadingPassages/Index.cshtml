@model IEnumerable<ExamSystem.Core.Entities.ReadingPassage>

@{
    ViewData["Title"] = "Quản lý Bài đọc";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary m-0"><i class="fa fa-book"></i> Ngân hàng Bài đọc</h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="fa fa-plus-circle"></i> Thêm Bài đọc mới
        </a>
    </div>

    @* === FORM LỌC & TÌM KIẾM === *@
    <form asp-action="Index" method="get" class="mb-4 p-3 bg-light rounded shadow-sm">
        <div class="row g-3 align-items-end">
            <div class="col-md-10">
                <label class="form-label fw-bold">Tìm kiếm (Tiêu đề hoặc Nội dung)</label>
                <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Nhập từ khóa..." />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100"><i class="fa fa-filter"></i> Lọc</button>
            </div>
        </div>
    </form>
    @* === KẾT THÚC FORM LỌC === *@


    @* === BẢNG DỮ LIỆU CÓ THANH CUỘN DỌC VÀ GIỚI HẠN CHIỀU CAO === *@
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive" style="max-height: 550px; overflow-y: auto;">
                <table class="table table-striped table-hover align-middle mb-0">
                    <thead class="bg-primary text-white sticky-top">
                        <tr>
                            <th style="width: 5%">ID</th>
                            <th style="width: 25%">@Html.DisplayNameFor(model => model.Title)</th>
                            <th style="width: 55%">@Html.DisplayNameFor(model => model.Content)</th>
                            <th style="width: 15%" class="text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr><td colspan="4" class="text-center py-4 text-muted">Không tìm thấy bài đọc nào.</td></tr>
                        }

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><span class="badge bg-secondary">@item.Id</span></td>
                                <td class="fw-bold">
                                    @Html.DisplayFor(modelItem => item.Title)
                                </td>
                                <td>
                                    @* Cắt bớt nội dung để hiển thị gọn gàng *@
                                    @(item.Content != null && item.Content.Length > 150
                                                                    ? item.Content.Substring(0, 150) + "..."
                                                                    : item.Content)
                            </td>
                            <td class="text-center">
                                <div class="btn-group shadow-sm">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Sửa"><i class="fa fa-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Xem chi tiết"><i class="fa fa-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Xóa"><i class="fa fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                                                }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>