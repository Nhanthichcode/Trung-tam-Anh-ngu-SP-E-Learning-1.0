@using Microsoft.AspNetCore.Identity
@using ExamSystem.Core.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Anh Ngữ SP</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700;900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-brand-sp sticky-top">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    ANH NGỮ <span class="brand-highlight">SP</span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            // --- ADMIN & TEACHER AREA ---
                            @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-speedometer2 me-1"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                        <i class="bi bi-folder2-open me-1"></i> Quản lý
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><h6 class="dropdown-header text-uppercase small text-muted">Ngân hàng đề</h6></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Questions" asp-action="Index">Câu hỏi</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Exams" asp-action="Index">Đề thi</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><h6 class="dropdown-header text-uppercase small text-muted">Tài nguyên</h6></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="ReadingPassages" asp-action="Index">Bài đọc</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="ListeningResources" asp-action="Index">File nghe</a></li>
                                    </ul>
                                </li>
                            }

                            // --- STUDENT AREA ---
                            @if (User.IsInRole("Student"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Student" asp-controller="Home" asp-action="Index">
                                        <i class="bi bi-pencil-square me-1"></i> Vào thi
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="Student" asp-controller="TestResults" asp-action="Index">
                                        <i class="bi bi-clock-history me-1"></i> Lịch sử
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center gap-2">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown">
                                    <div class="rounded-circle d-flex justify-content-center align-items-center me-2 user-avatar">
                                        @UserManager.GetUserName(User)?.Substring(0, 1).ToUpper()
                                    </div>
                                    <span class="fw-bold">@UserManager.GetUserName(User)</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>Hồ sơ cá nhân</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form id="logoutForm" asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger fw-bold">
                                                <i class="bi bi-power me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-brand-outline btn-sm px-3 rounded-pill" asp-controller="Account" asp-action="Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-brand-primary btn-sm px-4 rounded-pill shadow-sm" asp-controller="Account" asp-action="Register">Đăng ký ngay</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="py-4 mt-auto">
        <div class="container text-center">
            <h5 class="fw-bold text-uppercase mb-3">Anh Ngữ <span class="text-warning">SP</span></h5>
            <p class="small text-white-50 mb-2">Nâng tầm ngoại ngữ - Vươn tới tương lai</p>
            <div class="mb-3">
                <a href="#" class="text-white me-3"><i class="bi bi-facebook fs-5"></i></a>
                <a href="#" class="text-white me-3"><i class="bi bi-youtube fs-5"></i></a>
                <a href="#" class="text-white"><i class="bi bi-tiktok fs-5"></i></a>
            </div>
            <span class="text-white-50 small">&copy; 2025 Exam System. All rights reserved.</span>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>