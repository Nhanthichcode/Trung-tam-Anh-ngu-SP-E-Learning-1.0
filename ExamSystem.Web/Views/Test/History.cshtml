@model IEnumerable<ExamSystem.Core.Entities.TestAttempt>
@using ExamSystem.Core.Enums

@{
    ViewData["Title"] = "Lịch sử làm bài";
}

<div class="container py-5">
    <h2 class="fw-bold text-primary mb-4"><i class="bi bi-clock-history"></i> Lịch sử làm bài</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-secondary text-center">
            Bạn chưa làm bài thi nào. <a asp-action="Index" class="alert-link">Làm bài ngay</a>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Đề thi</th>
                            <th>Ngày thi</th>
                            <th class="text-center">Điểm số</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold text-primary">@item.Exam.Title</td>
                                <td>@item.StartTime.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">
                                    <span class="badge bg-success fs-6">@item.Score</span>
                                </td>
                                <td class="text-center">
                                    @if (item.Status == 2) // Graded
                                    {
                                        <span class="badge bg-success-subtle text-success border border-success">Đã chấm xong</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning-subtle text-warning border border-warning">Chờ chấm tự luận</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-action="Result" asp-route-attemptId="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-eye-fill"></i> Xem chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>