@model ExamSystem.Core.Entities.Topic

@{
    ViewData["Title"] = "Tạo Chủ đề mới";
}

<div class="container mt-4">
    <div class="card border-success shadow-lg">
        <div class="card-header bg-success text-white">
            <h4 class="m-0"><i class="fa fa-plus-circle"></i> Thêm Chủ đề mới</h4>
        </div>
        <div class="card-body">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên Chủ đề (*)</label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Ví dụ: Từ vựng chuyên ngành y khoa" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Mô tả mục đích của chủ đề này..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p class="alert alert-info small mt-4">
                            <i class="fa fa-info-circle"></i> Chủ đề được sử dụng để phân loại và dễ dàng tìm kiếm các câu hỏi liên quan trong Ngân hàng đề thi.
                        </p>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Quay lại danh sách</a>
                    <button type="submit" class="btn btn-success px-5 shadow">
                        <i class="fa fa fa-save"></i> Lưu Chủ đề
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}