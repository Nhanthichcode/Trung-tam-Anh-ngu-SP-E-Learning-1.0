@model ExamSystem.Core.Entities.Topic

@{
    ViewData["Title"] = "Sửa Chủ đề";
}

<div class="container mt-4">
    <div class="card border-warning shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="m-0"><i class="fa fa-pencil"></i> Sửa Chủ đề: @Model.Name</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Tên Chủ đề (*)</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả chi tiết</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <p class="alert alert-info small mt-4">
                            <i class="fa fa-info-circle"></i> Chủ đề này được dùng để phân loại các câu hỏi trong Ngân hàng đề thi.
                        </p>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fa fa-arrow-left"></i> Quay lại danh sách</a>
                    <button type="submit" class="btn btn-warning px-5 shadow">
                        <i class="fa fa-save"></i> Cập nhật
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}